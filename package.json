{
  "name": "braintree-mongo",
  "version": "0.1.0",
  "description": "Integrates with the Braintree API, storing data in MongoDB",
  "main": "build/index.js",
  "author": "Daniel Li <dan@danyll.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run transpile && ./node_modules/.bin/babel build -d dist",
    "lint": "tslint -c tslint.json -e 'src/**/*.test.ts' 'src/**/*.ts'",
    "lint-fix": "tslint -c tslint.json --fix -e 'src/**/*.test.ts' 'src/**/*.ts'",
    "lint-fixall": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "test": "yarn run transpile && ./node_modules/.bin/nyc ./node_modules/.bin/mocha --compilers ts-node/register --require source-map-support/register --full-trace --bail src/test.ts",
    "transpile": "tsc"
  },
  "dependencies": {
    "braintree": "^2.2.0",
    "dotenv": "^4.0.0",
    "mongodb": "^2.2.30"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/chai-as-promised": "^0.0.31",
    "@types/chai-subset": "^1.3.0",
    "@types/mocha": "^2.2.41",
    "@types/mongodb": "^2.2.7",
    "@types/node": "^8.0.13",
    "@types/sinon": "^2.3.2",
    "@types/sinon-chai": "^2.7.28",
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.5.0",
    "chance": "^1.0.10",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "sinon": "^2.3.7",
    "sinon-chai": "^2.11.0",
    "source-map-support": "^0.4.15",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "typings": "^2.1.1"
  }
}
